# ═══════════════════════════════════════════════════════════════════════════════
# AIRMAN Core - Development Environment
# ═══════════════════════════════════════════════════════════════════════════════

NODE_ENV=development
ENVIRONMENT=dev

# Database
POSTGRES_USER=airman
POSTGRES_PASSWORD=airman-dev-password
POSTGRES_DB=airman
DATABASE_URL=postgresql://airman:airman-dev-password@postgres:5432/airman?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_PUBLIC_KEY=dev-secret-key-change-this-in-production-32ch
JWT_ACCESS_EXPIRES_SEC=900
JWT_REFRESH_EXPIRES_DAYS=7

# API
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_ORIGIN=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# DB Seeding
RUN_DB_SEED=true

# Logging
LOG_LEVEL=debug
